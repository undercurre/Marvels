{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["types/**/*.d.ts", "packages/components/**/*.ts", "examples/**/*.ts"],
	"exclude": [
		"vitepress",
		"node_modules",
		"dist",
		"examples/node_modules",
		"packages/components/node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"strict": true,
		"target": "ES2015",
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": ["esnext", "dom"]
	}
}
